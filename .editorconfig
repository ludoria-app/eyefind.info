# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2

# Quote style
single_quote = true

# Trim trailing whitespace
trim_trailing_whitespace = true

# Max line length
max_line_length = 160

[CHANGELOG.md]
indent_size = false
