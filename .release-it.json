{
  "git": {
    "commitMessage": "release: ðŸš€ release v${version}",
    "requireUpstream": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "patch",
            "section": "Bug Fixes"
          },
          {
            "type": "docs",
            "section": "Documentation"
          },
          {
            "type": "refactor",
            "section": "Code Refactoring"
          },
          {
            "type": "perf",
            "section": "Performance Improvements"
          },
          {
            "type": "config",
            "section": "Configuration"
          },
          {
            "type": "test",
            "section": "Tests"
          }
        ]
      }
    }
  }
}
